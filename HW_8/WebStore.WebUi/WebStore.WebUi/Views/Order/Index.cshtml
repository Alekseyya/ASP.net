@model IEnumerable<WebStore.WebUi.Models.Order.UserOrderViewModel>

@{
    Layout = null;
}



@foreach(var user in Model){
    <div class="user__order-item row">
        <div class="user__id col-md-1">@user.Id</div>
        <div class="user__name col-md-4">@user.UserName</div>
        <div class="user__order-date col-md-3">@user.OrderDate</div>
        <div class="user__order-details col-md-4">@Html.ActionLink("Детали заказа", "OrderHistoryDetails", "Order", new { orderDate = user.OrderDate}, null)</div>
    </div>    
}

<div class="return">
    <div class="return__catalog">
        @Html.ActionLink("Вернуться к списку товаров", "Catalog", "Cart")
    </div>    
</div>

