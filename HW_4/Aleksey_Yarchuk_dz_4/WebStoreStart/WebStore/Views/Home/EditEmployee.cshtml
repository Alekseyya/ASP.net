@model WebStore.Models.Employee
@{
    ViewBag.Title = "EditEmployee";
}

<h2>Сотрудник </h2>
@using (Html.BeginForm("EditEmployee", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <fieldset>
        @Html.HiddenFor(m => m.id)
        <p>
            @Html.LabelFor(m => m.FirstName)
            <br />
            @Html.EditorFor(m => m.FirstName)
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </p>
        <p>
            @Html.LabelFor(m => m.LastName)
            <br />
            @Html.EditorFor(m => m.LastName)
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })

        </p>
        <p>
            @Html.LabelFor(m => m.Partonymic)
            <br />
            @Html.EditorFor(m => m.Partonymic)
            @Html.ValidationMessageFor(m => m.Partonymic, "", new { @class = "text-danger" })

        </p>
        <p>
            @Html.LabelFor(m => m.Age)
            <br />
            @Html.EditorFor(m => m.Age)
            @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
        </p>
        <p>
            @Html.LabelFor(m=>m.Position)
            <br/>
            @Html.DropDownListFor(m => m.Position, Model.PositionList)
            @Html.ValidationMessageFor(m => m.Position, "", new { @class = "text-danger" })
        </p>        
        <p>
            @Html.LabelFor(m => m.DateofBirth)
            <br />
            @Html.EditorFor(m => m.DateofBirth)
            @Html.ValidationMessageFor(m => m.DateofBirth, "", new { @class = "text-danger" })
        </p>
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}


 